<% provide(:title, "") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <h1>ログイン</h1>
      <%= form_with(scope: :session, url: login_path, local:true) do |f| %>
      
        <%= f.label :email, class: "label-login" %>
        <%= f.email_field :email, class: 'form-control' %>
        
        <%= f.label :password, class: "label-login" %>
        <%= link_to "パスワードを忘れた場合はこちら", new_password_reset_path %>
        <%= f.password_field :password, class: 'form-control' %>
        
        <%= f.label :remember_me, class: "checkbox checkbox-login", for: "remember-me" do %>
          <%= f.check_box :remember_me, id: "remember-me" %>
          <span class="remember-span">ログイン情報を記憶する</span>
        <% end %>
        
        <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
      <% end %>
  </div>
</div>
